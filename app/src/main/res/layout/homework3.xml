<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D8C20C">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="740dp"
        tools:ignore="MissingConstraints"
        app:cardBackgroundColor="#D8E466"
        app:cardCornerRadius="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <ImageView
               android:layout_width="150dp"
               android:layout_height="150dp"
               android:src="@drawable/sunflower1"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintVertical_bias="0.1"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="450dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.99"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="25dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MY LOVE,"
                        android:textColor="#081B86"
                        android:textSize="20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0.1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.12"/>

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YOU LIKE A FLOWER"
                        android:textColor="#081B86"
                        android:textSize="20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0.15"
                        app:layout_constraintTop_toBottomOf="@id/txt_1"/>

                    <ImageView
                        android:id="@+id/img_star"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star"
                        app:layout_constraintTop_toBottomOf="@id/txt2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0.075"
                        android:layout_marginTop="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Editor's Choice"
                        android:textColor="#474004"
                        app:layout_constraintLeft_toRightOf="@id/img_star"
                        app:layout_constraintTop_toBottomOf="@id/txt2"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:id="@+id/txt_3"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textColor="#081B86"
                        android:text="We're all a little weird. And life is a little weird And when we find someone whose weirdness is compatible with ours we join up with them and fall into mutually satisfying weirdness and all it love-true love "
                        app:layout_constraintTop_toBottomOf="@id/img_star"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:id="@+id/txt4"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textColor="#081B86"
                        android:text="And in this crazy life and through these."
                        app:layout_constraintTop_toBottomOf="@id/txt_3"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$99.9"
                        android:textColor="#081B86"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        app:layout_constraintTop_toBottomOf="@id/txt4"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_bias="0.1"
                        android:layout_marginTop="25dp"/>

                    <Button
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:text="ORDER NOW"
                        android:background="@drawable/btn_background"
                        app:layout_constraintLeft_toRightOf="@id/txt_price"
                        app:layout_constraintTop_toBottomOf="@id/txt4"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="130dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
       </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>