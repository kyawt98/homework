<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Our Team"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#161616"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_1"
        android:layout_width="80dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:cardCornerRadius="250dp"
        tools:ignore="MissingConstraints">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/adam"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adams G"
            android:textColor="#D9030303"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_marginTop="82dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Executive Officer"
            android:textColor="#D9686363"
            android:textSize="10sp"
            android:layout_marginTop="100dp"
            android:textAlignment="center" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_2"
        android:layout_width="80dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintLeft_toRightOf="@id/card_1"
        android:layout_marginLeft="25dp"
        app:cardCornerRadius="250dp"
        tools:ignore="MissingConstraints">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/betty"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Betty L"
            android:textColor="#D9030303"
            android:textSize="12sp"
            android:layout_marginTop="82dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marketing"
            android:textColor="#D9686363"
            android:textSize="10sp"
            android:textAlignment="center"
            android:layout_marginTop="100dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_3"
        android:layout_width="80dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintLeft_toRightOf="@id/card_2"
        android:layout_marginLeft="25dp"
        app:cardCornerRadius="250dp"
        tools:ignore="MissingConstraints">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/robet"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Roberts"
            android:textColor="#D9030303"
            android:textAlignment="center"
            android:textSize="12sp"
            android:layout_marginTop="82dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Business Analyst"
            android:textColor="#D9686363"
            android:textSize="10sp"
            android:layout_marginTop="100dp"
            android:textAlignment="center"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_4"
        android:layout_width="80dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/card_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="250dp"
        tools:ignore="MissingConstraints">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/miller"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Miller W"
            android:textColor="#D9030303"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_marginTop="82dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UX Designer"
            android:textColor="#D9686363"
            android:textSize="10sp"
            android:layout_marginTop="100dp"
            android:textAlignment="center"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_5"
        android:layout_width="80dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/card_2"
        app:layout_constraintLeft_toRightOf="@id/card_4"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="250dp"
        tools:ignore="MissingConstraints">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/kevin"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kevin John"
            android:textColor="#D9030303"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_marginTop="82dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Web Developer"
            android:textColor="#D9686363"
            android:textSize="10sp"
            android:layout_marginTop="100dp"
            android:textAlignment="center"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_6"
        android:layout_width="80dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/card_3"
        app:layout_constraintLeft_toRightOf="@id/card_5"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="250dp"
        tools:ignore="MissingConstraints">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/laura"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laura M"
            android:textColor="#D9030303"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_marginTop="82dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Dev"
            android:textColor="#D9686363"
            android:textSize="10sp"
            android:layout_marginTop="100dp"
            android:textAlignment="center"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_mission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mission"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1D1D1D"
        app:layout_constraintTop_toBottomOf="@id/card_6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Duis tellus metus, elementum a lectus id, aliquet interdum mauris. Nam bibedum efficitur sollicitudin. Proin eleifend libero velit, nec fringilla dolor finibus quis. nMorbi eu libero pellentesque, rutrum metus quis, blandit est. Fusce bibendum accumsan nisi vulpitate feugiat. In fermentum laoreet euismod. Praesent sem nisl, facilisis eget odio at, rhoncus scelerisque ipsum. Nulla orci dui, dignissim a risus ut, lobortis porttitor velit.
        Nulla id lectus metus. Maecenas a lorem in odio auctor facillisis non vitae nunc. Sed malesuada volutpat massa. Praesent sit amet lacinia augue."
        app:layout_constraintTop_toBottomOf="@id/txt_mission"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="15dp"
        android:textAlignment="inherit"/>
</androidx.constraintlayout.widget.ConstraintLayout>